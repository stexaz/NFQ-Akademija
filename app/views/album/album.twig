{% extends 'base.twig' %}
{% block content %}
{% if photos %}
    {% for photo in photos %}
        <a href="/photo/{{ photo.id }}">{% if photo.thumb %}<img src="{{ photo.thumb }}" alt="{{ photo.title }}" title="{{ photo.description }}"/>{% else %}{{ photo.title }}{% endif %}</a>
    {% endfor %}
    {% else %}
    No photos in this album yet
    {% endif %}
{% endblock %}